<div class="modal fade" id="contacts-form">
  <%= form_for @contact, :html => { :class => "form-horizontal contact" ,remote:true} do |f| %>
      <div class="modal-dialog mb-20">
        <h4 class="popup-title"><%=@contact.new_record? ? "Add New" : "Edit"%> Contact</h4>
        <div class="modal-content">
          <div class="modal-body">
            <div class="mb-20">
              <%= f.text_field :first_name, :class => 'form-control' ,:placeholder=>"First Name"%>
              <%=f.error_span(:first_name) %>
            </div>
            <div class="mb-20">
              <%= f.text_field :last_name, :class => 'form-control' ,:placeholder=>"Last Name"%>
              <%=f.error_span(:last_name) %>
            </div>
            <div class="mb-20">
              <%= f.email_field :email, :class => 'form-control' ,:placeholder=>"Email"%>
              <%=f.error_span(:email) %>
            </div>
            <div class="mb-20">
              <%= f.select :status_id,Contact::FreidnlyStatusName.invert.to_a ,{},:class => 'form-control' %>
              <%=f.error_span(:status_id) %>
            </div>
            <div class="mb-20">
              <%= f.text_field :position, :class => 'form-control' ,:placeholder=>"Position"%>
              <%=f.error_span(:position) %>
            </div>
            <div class="mb-20">
              <%= f.text_field :referred_by, :class => 'form-control' ,:placeholder=>"Referred By"%>
              <%= f.error_span(:referred_by) %>
            </div>
            <%= f.hidden_field :organization_id, :class => 'form-control' %>
          </div>
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="custom_button" >Save</button>
        <br/>
        <br/>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
  <%end%>
</div>