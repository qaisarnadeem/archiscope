<div class="col-xs-12 text-center">
  <div class="col-xs-12">
    Logo Here
  </div>
  <div class="col-xs-12">
    ARCHiSCOPE
  </div>
</div>
<div class="col-xs-12">
  <ul class="nav nav-tabs">
    <li class="col-xs-4">
      <a data-toggle="tab" href="#home_tab">Home</a>
    </li>
    <li class="col-xs-4 active">
      <a data-toggle="tab" href="#organizations_tab">Organizations</a>
    </li>
    <li class="col-xs-4">
      <a data-toggle="tab" href="#areas_tab">Areas of Interest</a>
    </li>
  </ul>
</div>
<div class="tab-content">
  <div id="home_tab" class="fade tab-pane">
  </div>
  <div id="organizations_tab" class="active tab-pane">
    <header class="jumbotron hero-spacer">
      <%=form_tag request.path ,:class=>'form horizontal',:method=>:get do%>
          <div class="form-group search-box">
            <div class="field-container">
              <div class="col-xs-9">
                <%=text_field_tag 'q' , params[:q],autocomplete: :off,:placeholder=>'Search',:class=>'form-control search-field',:id=>'query-search'%>
              </div>
              <div class="form-group col-xs-3">
                <%=select_tag "type",options_for_search_types(params[:type]) ,class: "form-control",id: 'type-chosen'%>
              </div>
            </div>
          </div>
      <%end%>
    </header>
    <%= render partial: "organizations/organization", collection: @organizations%>
    <%= will_paginate @organizations%>
  </div>
  <div id="areas_tab" class="fade tab-pane">
    <%=render :partial => "areas_of_interests"%>
  </div>
</div>
<script type="text/javascript">
    autocomplete_data=<%=raw(get_tags_hash_for_autocomplete.to_json)%>
            set_autocomplete_for('#query-search');
    $('#type-chosen').change(function(){
        set_autocomplete_for('#query-search',$(this).val());
    });
</script>