<%content_for :top_header do%>
    <div class="col-xs-8 p-0 text-center logo"><%=image_tag 'logo1.png' %></div>
<%end%>
<%@body_class='login_bg'%>
<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
        <div class="form-group mt-70">
          <%= f.email_field :email, autofocus: true, class: "form-control form-control login_field" ,:placeholder=>"Email"%>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control login_field" ,:placeholder=>"Password"%>
        </div>
        <div class="form-group">
          <p>
            <%= link_to "Forgot Password?", new_password_path(resource_name),:class=>'forgot_style' %>
          </p>
        </div>
        <button type="submit" class="custom_button_login mt-50">Sign In</button>
    <% end %>
  </div>
</div>

