<%- model_class = Organization -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @organization.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:organization_type_id) %>:</strong></dt>
  <dd><%= @organization.organization_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @organization.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:about) %>:</strong></dt>
  <dd><%= @organization.about %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @organization.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:logo_file_name) %>:</strong></dt>
  <dd><%= @organization.logo_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:logo_content_type) %>:</strong></dt>
  <dd><%= @organization.logo_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:logo_file_size) %>:</strong></dt>
  <dd><%= @organization.logo_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:logo_updated_at) %>:</strong></dt>
  <dd><%= @organization.logo_updated_at %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              organizations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_organization_path(@organization), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              organization_path(@organization),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
